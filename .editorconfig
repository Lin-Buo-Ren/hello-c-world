# EditorConfig is awesome:
# http://EditorConfig.org

# Is this the top-most EditorConfig file?
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{c,cpp,c++,h,hpp,h++}]
indent_style = tab
# indent_size = 2

[{travis.yml}]
indent_style = space
indent_size = 2
